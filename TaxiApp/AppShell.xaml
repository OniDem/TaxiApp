<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TaxiApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TaxiApp.Pages"
    Shell.FlyoutBehavior="Flyout"
    Shell.FlyoutWidth="250">
    
    <MenuItem Text="Обо мне" x:Name="SessionUser" Clicked="SessionUser_Clicked"/>

    <FlyoutItem FlyoutDisplayOptions="AsMultipleItems">
        <Tab Title="Заказы">
            <ShellContent Title="Текущий заказ"
                          ContentTemplate="{DataTemplate local:CurrentOrderPage}" />
            <ShellContent Title="Новый заказ"
                          ContentTemplate="{DataTemplate local:OrderPage}" />
        </Tab>
        <ShellContent Title="История"
                      ContentTemplate="{DataTemplate local:OrderHistoryPage}" />
        <ShellContent Title="Рейтинг"
                      ContentTemplate="{DataTemplate local:UserRatingPage}" />
        <ShellContent Title="Настройки"
                      ContentTemplate="{DataTemplate local:SettingPage}" />
    </FlyoutItem>

    <MenuItem Text="Выйти из учётной записи" x:Name="SessionExit" Clicked="SessionExit_Clicked"/>
</Shell>
